<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:gravity="center">

    <EditText
        android:id="@+id/id_login_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/user"
        android:gravity="center_vertical"
        android:hint="账号"
        android:lines="1"
        android:textColorHint="#000000" />

    <EditText
        android:inputType="numberPassword"
        android:id="@+id/id_login_pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/id_login_name"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/password"
        android:gravity="center_vertical"
        android:hint="密码"
        android:lines="1"
        android:textColorHint="#000000" />

    <LinearLayout
        android:id="@+id/id_login_ll"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_login_pass"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="保存密码"
            android:textColor="#000000"
            android:textSize="12sp" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="自动登录"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/id_login_ll"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_login_goLogin"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/loginbutton"
            android:text="登陆"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/id_login_registration"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/loginbutton"
            android:text="注册"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>
